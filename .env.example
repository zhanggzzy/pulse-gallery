# This is an example of a .env file for the application.
# Copy this file to .env and modify the values as needed.

# Project root directory
PROJECT_ROOT_DIR = .

# Debug mode for the application
DEBUG_MODE = true

# Environment variables for the application, development or production
ENV = development

# Directory where images are stored
IMAGE_DIR = ./path/to/images

# Path to the SQLite database file
DB_PATH = ./path/to/database/database.db